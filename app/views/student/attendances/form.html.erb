<%= turbo_frame_tag "modal" do %>
  <div class="modal__backdrop" data-controller="modal">
    <!-- Overlay/Background click handler -->
    <div class="fixed inset-0" data-action="click->modal#closeBackground"></div>

    <div class="modal__container">
      <div class="modal__content p-6 relative" data-modal-target="content">
        
        <!-- Close Button -->
        <button type="button" class="modal__close" data-action="modal#close">
          <span class="sr-only">閉じる</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <h3 class="text-xl font-bold text-gray-900 mb-2">理由入力</h3>
        <p class="text-sm text-gray-500 mb-6 font-medium">出席状況の理由を入力してください。</p>

        <%= form_with model: @attendance, 
                      url: @attendance.persisted? ? student_attendance_path(@attendance) : student_attendances_path, 
                      method: @attendance.persisted? ? :patch : :post,
                      data: { action: "turbo:submit-start->modal#hide turbo:submit-end->modal#close" } do |f| %>
          
          <%= f.hidden_field :period_id %>
          <%= f.hidden_field :status %>
          
          <div class="mb-4">
            <%= f.text_area :reason, rows: 4, 
                class: "shadow-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500 block w-full text-base border-gray-300 rounded-lg bg-gray-50 p-3 resize-none", 
                placeholder: "理由を入力してください..." %>
          </div>

          <div class="flex items-center mb-6">
            <%= check_box_tag :apply_to_all, "1", false, 
                class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded",
                id: "apply_to_all_modal" %>
            <%= label_tag "apply_to_all_modal", "すべてのコマに適用", class: "ml-2 block text-sm text-gray-700 cursor-pointer select-none" %>
          </div>

          <div class="flex justify-end gap-3">
             <button type="button" class="text-gray-500 hover:text-gray-700 px-4 py-2" data-action="modal#close">キャンセル</button>
             <%= f.submit "保存", class: "bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 font-medium transition-colors w-24" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
