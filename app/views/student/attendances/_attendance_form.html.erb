<div class="bg-container shadow rounded-lg p-6 mb-8 border border-brown">
  <h2 class="text-lg font-bold mb-6 text-gray-800">本日の出席登録 - <%= l(Date.current, format: "%Y年%m月%d日") %></h2>
  <% if periods.empty? %>
    <p class="text-gray-500">本日の授業はありません。</p>
  <% else %>
    <div class="border border-brown rounded">
      <% periods.each_with_index do |period, index| %>
        <div class="grid grid-cols-[80px_1fr] border-b border-brown last:border-b-0 min-h-[60px]">
          <!-- 左側: コマ名 -->
          <div class="flex items-center justify-center border-r border-brown bg-container p-2">
            <span class="font-medium text-gray-700"><%= period.period_number %>コマ目</span>
          </div>
          <!-- 右側: ボタン群 -->
          <div class="p-2 flex items-center">
            <%= render "attendance_row", period: period, attendance: today_attendances[period.id] %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
