<%= turbo_frame_tag "modal" do %>
  <div class="modal__backdrop" data-controller="modal">
    <!-- Overlay -->
    <div class="fixed inset-0" data-action="click->modal#closeBackground"></div>

    <div class="modal__container">
      <div class="modal__content p-6 relative" data-modal-target="content">
        
        <!-- Close Button (Icon) -->
        <button type="button" class="modal__close" data-action="modal#close">
          <span class="sr-only">閉じる</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <h3 class="text-xl font-bold text-gray-900 mb-2">理由詳細</h3>
        
        <!-- 日付・コマ -->
        <p class="text-sm text-gray-500 mb-6 font-medium">
            <%= l(attendance.date, format: "%Y/%m/%d") %> - <%= attendance.period.period_number %>コマ
        </p>

        <!-- 出席状況 -->
        <div class="mb-6">
          <p class="text-sm font-medium text-gray-700 mb-2">出席状況</p>
          <span class="<%= attendance_badge_classes(attendance.status) %>">
            <%= attendance_label(attendance.status) %>
          </span>
        </div>

        <!-- 理由 -->
        <div class="mb-8">
          <p class="text-sm font-medium text-gray-700 mb-2">理由</p>
          <div class="w-full text-base border border-gray-200 rounded-lg bg-white p-3 min-h-[5rem] text-gray-800">
            <%= simple_format(h(attendance.reason.presence || "理由の記載はありません"), class: "m-0") %>
          </div>
        </div>

        <!-- Confirm Button (Close) -->
        <div class="flex justify-end">
          <button type="button" class="bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 font-bold transition-colors" data-action="modal#close">閉じる</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
