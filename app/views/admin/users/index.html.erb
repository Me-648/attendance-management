<div class="admin-container">
  <header class="admin-header">
    <h1>出席管理アプリ</h1>
    <div class="logout-link">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
    </div>
  </header>

  <main class="admin-main">
    <!-- 出欠一覧セクション -->
    <section class="search-section">
      <h2 class="section-title">出欠一覧</h2>
      <%= form_with url: admin_attendance_list_path, method: :get, class: "search-form" do |f| %>
        <div class="form-row">
          <%= f.number_field :year, placeholder: "年", class: "input-field input-year", min: 2020, max: 2030 %>
          <%= f.number_field :month, placeholder: "月", class: "input-field input-month", min: 1, max: 12 %>
          <%= f.number_field :day, placeholder: "日", class: "input-field input-day", min: 1, max: 31 %>
          <%= f.number_field :period, placeholder: "コマ", class: "input-field input-period", min: 1, max: 5 %>
        </div>
        <div class="form-row">
          <%= f.text_field :enrollment_year, placeholder: "年度入学生", class: "input-field input-enrollment" %>
          <%= f.submit "検索", class: "btn-search" %>
        </div>
      <% end %>
    </section>

    <!-- 累計一覧セクション -->
    <section class="search-section">
      <h2 class="section-title">累計一覧</h2>
      <%= form_with url: admin_absence_list_path, method: :get, class: "search-form" do |f| %>
        <div class="form-row">
          <%= f.text_field :enrollment_year, placeholder: "年度入学生", class: "input-field input-enrollment" %>
          <%= f.submit "検索", class: "btn-search" %>
        </div>
      <% end %>
    </section>
  </main>
</div>

<style>
  .admin-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    font-family: sans-serif;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .admin-header h1 {
    font-size: 24px;
    margin: 0;
  }

  .logout-link a {
    color: #333;
    text-decoration: none;
  }

  .admin-main {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .search-section {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 4px;
  }

  .section-title {
    background-color: #999;
    color: white;
    padding: 10px;
    margin: -20px -20px 20px -20px;
    font-size: 18px;
    font-weight: normal;
  }

  .search-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .form-row {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .input-field {
    border: 1px solid #ccc;
    padding: 8px 12px;
    font-size: 14px;
  }

  .input-year,
  .input-month,
  .input-day,
  .input-period {
    width: 60px;
  }

  .input-enrollment {
    flex: 1;
  }

  .btn-search {
    background-color: #ddd;
    border: 1px solid #999;
    padding: 8px 20px;
    font-size: 14px;
    cursor: pointer;
    white-space: nowrap;
  }

  .btn-search:hover {
    background-color: #ccc;
  }
</style>
