<div class="admin-container">
  <header class="admin-header">
    <h1>出席管理アプリ</h1>
    <div class="logout-link">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
    </div>
  </header>

  <main class="absence-list-main">
    <div class="page-title">
      欠席者一覧
      <% if @enrollment_year.present? %>
        （<%= @enrollment_year %>年度入学生）
      <% end %>
    </div>

    <table class="absence-table">
      <thead>
        <tr>
          <th>学生名</th>
          <th>学籍番号</th>
          <th>欠席回数</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.student_id %></td>
            <td><%= @absence_counts[student.id] || 0 %>回</td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="back-link">
      <%= link_to "← 戻る", admin_root_path %>
    </div>
  </main>
</div>

<style>
  .admin-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    font-family: sans-serif;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .admin-header h1 {
    font-size: 24px;
    margin: 0;
  }

  .logout-link a {
    color: #333;
    text-decoration: none;
  }

  .absence-list-main {
    background-color: #fff;
  }

  .page-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .absence-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
  }

  .absence-table th,
  .absence-table td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
  }

  .absence-table th {
    background-color: #f5f5f5;
    font-weight: normal;
  }

  .absence-table td {
    background-color: white;
  }

  .back-link {
    margin-top: 20px;
  }

  .back-link a {
    color: #0066cc;
    text-decoration: none;
  }

  .back-link a:hover {
    text-decoration: underline;
  }
</style>
