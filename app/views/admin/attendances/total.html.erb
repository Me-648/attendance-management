<div class="admin-container">
  <header class="admin-header">
    <h1>出席管理アプリ</h1>
    <div class="logout-link">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
    </div>
  </header>

  <main class="student-total-main">
    <div class="student-info">
      <div class="info-row">
        <span class="label">学籍番号：</span>
        <span class="value"><%= @student.student_id %></span>
      </div>
      <div class="info-row">
        <span class="label">氏名：</span>
        <span class="value"><%= @student.name %></span>
      </div>
    </div>

    <div class="total-stats">
      <h2>出席状況</h2>
      
      <div class="stat-grid">
        <div class="stat-item attended">
          <div class="stat-label">出席</div>
          <div class="stat-value"><%= @stats[:attended] %>回</div>
        </div>
        
        <div class="stat-item absent">
          <div class="stat-label">欠席</div>
          <div class="stat-value"><%= @stats[:absent] %>回</div>
        </div>
        
        <div class="stat-item late">
          <div class="stat-label">遅刻</div>
          <div class="stat-value"><%= @stats[:late] %>回</div>
        </div>
        
        <div class="stat-item officially-absent">
          <div class="stat-label">公欠</div>
          <div class="stat-value"><%= @stats[:officially_absent] %>回</div>
        </div>
      </div>
      
      <div class="total-summary">
        <span class="summary-label">合計授業数：</span>
        <span class="summary-value"><%= @stats[:total] %>回</span>
      </div>
      
      <% if @stats[:total] > 0 %>
        <div class="attendance-rate">
          出席率：<%= number_to_percentage((@stats[:attended].to_f / @stats[:total] * 100), precision: 1) %>
        </div>
      <% end %>
    </div>

    <div class="back-link">
      <%= link_to "← 戻る", :back, class: "back-button" %>
    </div>
  </main>
</div>

<style>
  .admin-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 20px;
    font-family: sans-serif;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .admin-header h1 {
    font-size: 24px;
    margin: 0;
  }

  .logout-link a {
    color: #333;
    text-decoration: none;
    font-size: 14px;
  }

  .logout-link a:hover {
    text-decoration: underline;
  }

  .student-total-main {
    background-color: #fff;
  }

  .student-info {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 30px;
  }

  .info-row {
    display: flex;
    margin-bottom: 10px;
    font-size: 18px;
  }

  .info-row:last-child {
    margin-bottom: 0;
  }

  .info-row .label {
    font-weight: bold;
    min-width: 120px;
  }

  .info-row .value {
    font-size: 20px;
  }

  .total-stats {
    margin-bottom: 30px;
  }

  .total-stats h2 {
    font-size: 20px;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #333;
  }

  .stat-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
    margin-bottom: 20px;
  }

  .stat-item {
    padding: 20px;
    border-radius: 8px;
    text-align: center;
    color: white;
  }

  .stat-item.attended {
    background-color: #5cb85c;
  }

  .stat-item.absent {
    background-color: #d9534f;
  }

  .stat-item.late {
    background-color: #f0ad4e;
  }

  .stat-item.officially-absent {
    background-color: #5bc0de;
  }

  .stat-label {
    font-size: 14px;
    margin-bottom: 8px;
    opacity: 0.9;
  }

  .stat-value {
    font-size: 32px;
    font-weight: bold;
  }

  .total-summary {
    background-color: #f9f9f9;
    padding: 15px;
    border-radius: 4px;
    text-align: center;
    font-size: 18px;
    margin-bottom: 15px;
  }

  .summary-label {
    font-weight: bold;
  }

  .summary-value {
    font-size: 24px;
    color: #333;
    margin-left: 10px;
  }

  .attendance-rate {
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    color: #5cb85c;
    padding: 15px;
    background-color: #f0f8f0;
    border-radius: 4px;
  }

  .back-link {
    margin-top: 30px;
    text-align: center;
  }

  .back-button {
    display: inline-block;
    padding: 12px 40px;
    background-color: #6c757d;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 16px;
    transition: background-color 0.2s;
  }

  .back-button:hover {
    background-color: #5a6268;
  }
</style>