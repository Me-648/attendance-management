<div class="admin-container">
  <header class="admin-header">
    <h1>出席管理アプリ</h1>
    <div class="logout-link">
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
    </div>
  </header>

  <main class="absence-reason-main">
    <div class="student-info">
      <div class="info-row">
        <span class="label">学籍番号：</span>
        <span class="value"><%= @student.student_id %></span>
      </div>
      <div class="info-row">
        <span class="label">氏名：</span>
        <span class="value"><%= @student.name %></span>
      </div>
    </div>

    <div class="absence-details">
      <h2>欠席理由</h2>
      
      <div class="detail-row">
        <span class="detail-label">日付：</span>
        <span class="detail-value"><%= @attendance.date.strftime("%Y年%m月%d日") %></span>
      </div>
      
      <div class="detail-row">
        <span class="detail-label">曜日・コマ：</span>
        <span class="detail-value"><%= @period.weekday_ja %>曜日 <%= @period.period_number %>コマ</span>
      </div>
      
      <div class="reason-box">
        <%= @attendance.reason %>
      </div>
    </div>

    <div class="back-link">
      <%= link_to "← 戻る", :back, class: "back-button" %>
    </div>
  </main>
</div>

<style>
  .admin-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    font-family: sans-serif;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .admin-header h1 {
    font-size: 24px;
    margin: 0;
  }

  .logout-link a {
    color: #333;
    text-decoration: none;
    font-size: 14px;
  }

  .logout-link a:hover {
    text-decoration: underline;
  }

  .absence-reason-main {
    background-color: #fff;
  }

  .student-info {
    background-color: #f5f5f5;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 30px;
  }

  .info-row {
    display: flex;
    margin-bottom: 10px;
    font-size: 18px;
  }

  .info-row:last-child {
    margin-bottom: 0;
  }

  .info-row .label {
    font-weight: bold;
    min-width: 120px;
  }

  .info-row .value {
    font-size: 20px;
  }

  .absence-details {
    margin-bottom: 30px;
  }

  .absence-details h2 {
    font-size: 20px;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #333;
  }

  .detail-row {
    display: flex;
    margin-bottom: 15px;
    font-size: 16px;
  }

  .detail-label {
    font-weight: bold;
    min-width: 120px;
  }

  .detail-value {
    color: #555;
  }

  .reason-box {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 20px;
    min-height: 150px;
    margin-top: 20px;
    line-height: 1.8;
    font-size: 16px;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .no-reason {
    color: #999;
    font-style: italic;
  }

  .back-link {
    margin-top: 30px;
    text-align: center;
  }

  .back-button {
    display: inline-block;
    padding: 12px 40px;
    background-color: #6c757d;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 16px;
    transition: background-color 0.2s;
  }

  .back-button:hover {
    background-color: #5a6268;
  }
</style>